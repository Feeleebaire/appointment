<%- model_class = Rdv -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:phone_number) %></th>
      <th><%= model_class.human_attribute_name(:time) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @rdvs.each do |rdv| %>
      <tr>
        <td><%= link_to rdv.id, rdv_path(rdv) %></td>
        <td><%= rdv.name %></td>
        <td><%= rdv.phone_number %></td>
        <td><%= rdv.time %></td>
        <td><%=l rdv.created_at %></td>
        <td>
          <%= link_to "Edit",
                      edit_rdv_path(rdv), :class => 'btn btn-default btn-xs' %>
          <%= link_to "Delete",
                      appointment_path(rdv),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New",
            new_rdv_path,
            :class => 'btn btn-primary' %>
